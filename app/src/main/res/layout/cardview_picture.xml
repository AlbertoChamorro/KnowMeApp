<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pictureCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_picture_cardview"
    android:layout_marginBottom="@dimen/fab_margin"
    cardview:cardCornerRadius="@dimen/cardview_corner_radius">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pictureCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/test"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/default_space"
            android:paddingRight="@dimen/default_space"
            android:paddingBottom="@dimen/default_space"
            android:background="@color/colorTransparent"
            >
                <TextView
                    android:id="@+id/userNameCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alberto Chamorro"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSizeBig"
                    />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                                <TextView
                                    android:id="@+id/doesTimeCard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hace"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/textSizeSmall"
                                    />
                                 <TextView
                                    android:id="@+id/relativeTimeCard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                     android:layout_marginLeft="@dimen/separator"
                                    android:text="4 dias"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/textSizeSmall"
                                    />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/fab_margin"
                            >
                            <CheckBox
                                android:id="@+id/likePictureCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:button="@drawable/checkbox_selector"
                                android:buttonTint="@color/colorWhite"
                                    />
                            <TextView
                                android:id="@+id/descriptionLikeCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/separator"
                                android:text="198 Me gusta"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/textSizeSmall"
                                />
                        </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>